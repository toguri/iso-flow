# Production Environment Variables
# Copy this file to terraform.tfvars and update with your actual values
# DO NOT commit terraform.tfvars to version control

# Basic Configuration
aws_region   = "ap-northeast-1"
project_name = "iso-flow"
environment  = "prod"

# Network Configuration
vpc_cidr = "10.1.0.0/16" # Different from dev environment

# Database Configuration
database_name     = "isoflow"
database_username = "isoflow_admin"
database_password = "CHANGE_ME_USE_STRONG_PASSWORD" # Use AWS Secrets Manager in production

# Domain Configuration (optional)
# domain_name     = "example.com"
# certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/xxxxxxxx"

# Monitoring and Alerting
alarm_email = "ops@example.com"

# Security (optional)
# allowed_ips = ["1.2.3.4/32", "5.6.7.8/32"] # Restrict access if needed

# Additional Tags
additional_tags = {
  Owner       = "Engineering Team"
  CostCenter  = "Engineering"
  Environment = "Production"
  Compliance  = "PCI"
}